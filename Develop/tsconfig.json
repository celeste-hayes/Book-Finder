{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "client/src/**/*",
    "server/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}