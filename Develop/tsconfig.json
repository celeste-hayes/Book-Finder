{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./",  // Change rootDir to the root of the project to include both client and server
    "outDir": "dist",  // The output folder for compiled files
    "skipLibCheck": true
  },
  "include": [
    "client/src/**/*",  // Include all client-side code
    "server/src/**/*"   // Include all server-side code
  ],
  "exclude": [
    "node_modules",  // Exclude node_modules folder
    "dist"           // Exclude the dist folder
  ]
}