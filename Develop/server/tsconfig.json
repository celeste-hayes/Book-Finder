{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",  // Or "ES2020" if you prefer
    "moduleResolution": "node",  // Ensures that TypeScript resolves modules like Node.js
    "esModuleInterop": true,  // Ensures compatibility with CommonJS and ES Modules
    "rootDir": "src",  // Make sure this points to your source directory
    "outDir": "dist",  // Output directory for compiled files
    "skipLibCheck": true,  // Skip checking declaration files
    "strict": true  // Enables strict mode
  },
  "include": ["src/**/*"],  // Ensure all TypeScript files in src are included
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist
}
